        <activity
            android:name=".ui.activity.SearchResultActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.activity.ProductDetailActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.activity.BeerTypeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ToolbarTheme"/>
        <activity
            android:name=".ui.activity.DiscountActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ToolbarTheme"/>
        <activity
            android:name=".ui.activity.OpenBaiduMap"
            android:configChanges="orientation|keyboardHidden"
            android:label="调用百度地图"
            android:screenOrientation="portrait"/>

    </application>
</manifest>
