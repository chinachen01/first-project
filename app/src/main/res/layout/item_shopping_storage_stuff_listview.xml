<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/item_shopping_storage_stuff_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/item_shopping_storage_stuff_image"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:src="@drawable/listimage1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:gravity="center_vertical"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/item_shopping_storage_stuff_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="title" />

        <TextView
            android:id="@+id/item_shopping_storage_stuff_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_shopping_storage_stuff_title_text"
            android:text="price" />
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/item_shopping_storage_stuff_price_text">
            <Button android:id="@+id/item_shopping_storage_stuff_reduce_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="减"
                />
            <TextView android:id="@+id/item_shopping_storage_stuff_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"/>
            <Button android:id="@+id/item_shopping_storage_stuff_add_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_shopping_storage_stuff_del_btn"
                android:text="删除"
                android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>