<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:clipToPadding="true"
              android:fitsSystemWindows="true"
              android:orientation="vertical"
              android:background="?attr/colorPrimaryDark"
    >
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="?actionBarSize"
        android:clipToPadding="false"
        android:id="@+id/recycler_view_recycler"
        />
    <include layout="@layout/toolbar_simple"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:src="@drawable/ic_favorite_border_white_48dp"
        android:background="@drawable/shape_favorite_fab"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:id="@+id/recycler_view_fab"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:src="@drawable/test_share"
        android:visibility="invisible"
        android:id="@+id/recycler_view_share"
        />
</FrameLayout>