<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_shopping_cart_shop_check"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/item_shopping_cart_shop_name_txt"
            android:text="title"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_shopping_cart_shop_point_txt"
            android:text="3km"
            />
    </LinearLayout>
    <com.zwtx.beer_talk.widget.MeasureListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_shopping_cart_shop_list"
        />
</LinearLayout>